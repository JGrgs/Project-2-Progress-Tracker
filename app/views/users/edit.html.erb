<div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Edit Profile</h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-group">
            <label>Username</label>
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
          </div>
        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label>Type Your Password or Change Password</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Password or New Password" %>
          <small id="passHelp" class="form-text text-muted">Enter your password to confirm changes. If you're updating your password, password should contain at least 6 characters.</small>
        </div>
        <div class="form-group">
          <label>Confirm Your Password or New Password</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
        </div>
        <%= f.submit "Submit Changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
