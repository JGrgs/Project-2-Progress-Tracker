<h1><%= @user.name %></h1>
<%if @user == current_user%>
<h3><%= link_to "Edit Profile", edit_user_path(@user.id), class: "btn btn-secondary" %></h3>
<%end%>

<ul>
<% @user.images.each do |i| %>
    <%= image_tag (i.image_url) %>
    <li><%= i.title %></li>
    <li><%= i.description %></li>
    <li><%= i.date %></li>
    <li><%= i.category %></li>
    <%if i.user == current_user%>
    <li><%= link_to("Edit", edit_image_path(i.id),  class: "btn btn-primary") %></li>
    <li><%= link_to("Delete Image", image_path(i.id), {method: 'delete', data: {confirm: "Are you sure?"}, class:"btn btn-danger" }) %></li>
    <%end%>
<% end %>
</ul>

<% if @user == current_user %>
    <%= link_to "Add New Image", new_image_path, class: "btn btn-secondary" %>
<% end %>
