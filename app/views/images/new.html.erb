    <div class="row">
        <div class="col-md-6 offset-md-3">
          <h1>Add Image</h1>
          <%= form_for @image do |f| %>
            <div class="form-group">
              <label>Image URL</label>
              <%= f.text_field :image_url, class: "form-control", placeholder: "Enter URL" %>
            </div>
            <div class="form-group">
              <label>Date</label>
              <%= f.text_field :date, class: "form-control", placeholder: "Enter Date" %>
            </div>
            <div class="form-group">
              <label>Title</label>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
            </div>
            <div class="form-group">
              <label>Description</label>
              <%= f.text_field :description, class: "form-control", placeholder: "Enter Description" %>
            </div>
            <div class="form-group">
                <label>Category</label>
                <%= f.text_field :category, class: "form-control", placeholder: "Enter Category" %>
              </div>

            <%= f.submit "Add Image", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>